<h3>User</h3>
<p>Name: <%= @user.name if @user.name %></p>
<p>Email: <%= @user.email if @user.email %></p>
<p>Labels:</p>
<p>
  <% @user.labels.each do |label| %>
    <%= render label %>
  <% end %>
</p>
<%= form_for Label.new, html: {class: 'form-inline'} do |f| %>
  <div class="form-group">
    <%= f.text_field :name, class: 'form-control', placeholder: 'Name' %>
  </div>
  <div class="form-group">
    <%= f.text_field :color, class: 'form-control', placeholder: 'Color' %>
  </div>
  <%= hidden_field :user, :id %>
  <%= f.submit 'Add Label', class: 'btn btn-primary' %>
<% end %>
